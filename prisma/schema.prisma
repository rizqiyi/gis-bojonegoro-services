// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model gis_user {
  id        Int       @id @default(autoincrement())
  email     String    
  avatar    String    
  username  String    @unique
  fullname  String
  password  String
  manage    String
  role_name String
  drainases gis_drainase[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model gis_drainase {
  id Int @id @default(autoincrement())
  latitude Float
  longitude Float
  district String
  sub_district String
  street_name String
  street_width String
  images gis_image_drainase[]
  left_typical String
  left_drainase_depth String
  left_drainase_width String
  left_drainase_condition String
  right_typical String
  right_drainase_depth String
  right_drainase_width String
  right_drainase_condition String
  note String
  sta String
  street_path String
  description String
  is_published Boolean
  user_id Int
  user    gis_user @relation(fields: [user_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model gis_image_drainase {
  id          Int       @id @default(autoincrement())
  image_path  String
  image_name  String
  image_id    String
  drainase_id Int
  drainase    gis_drainase @relation(fields: [drainase_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model gis_role {
  id        Int      @id @default(autoincrement())
  role_name String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
